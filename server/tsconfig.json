{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext", // ✅ fixes ESM resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "allowImportingTsExtensions": true, // ✅ lets you do `import './app.ts'`
    "emitDeclarationOnly": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "ts-node": {
    // ✅ ts-node ESM support
    "esm": true,
    "experimentalSpecifierResolution": "nodenext"
  }
}
